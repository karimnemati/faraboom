@{
    Layout=null;
}
<!DOCTYPE html>
<html lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>نیکاتک</title>
    <!-- External CSS -->
    <link type="text/css" rel="stylesheet" href="~/login/assets/css/bootstrap-rtl.min.css">
    <link type="text/css" rel="stylesheet" href="~/login/assets/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/login/assets/css/fonts.css">

    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/login/login-one/images/fev.png">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="~/login/login-one/css/login-one.css">

</head>
<body>

<!-- Loader -->
<div class="loader"><div class="loader_div"></div></div>

<!-- Login page -->
<div class="login_wrapper">
    <div class="container">
        <div class="col-md-12 pad-0" style="opacity: 80%;">
            <div class="row login-box-12">
                <div class="col-lg-5 col-md-12 col-sm-12 px-0">
                    <div class="login_left">
                        <a href="#" class="logo_text">
                            @* <span>JL</span> جاست لاگ *@
<img style="opacity: 100% !important;" src="~/login/login-one/images/Nikatek.png" alt="Simply Easy Learning"  > </a>
                        @* <p>تکنولوژی هوشمند نیکاتک</p> *@
                        <a href="~/login/RegisterAgency" class="btn-outline"> درخواست نمایندگی </a>
                        <br>
                        <a href="~/login/Register" class="btn-fadeOut"> ثبت نام کاربر </a>
                       @* <ul class="social-list clearfix">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul> *@
                    </div>
                </div>
                <div class="col-lg-7 col-sm-12">
                    <div class="login-inner-form">
                        <div class="details">
                            <p> ورود <span>به حساب کاربری</span></p>
                            <form method="GET">
                                <div class="form-group">
                                    <input type="" name="email" class="input-text" placeholder="نام کاربری">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="input-text" placeholder="رمزعبور">
                                </div>
                                <div class="checkbox clearfix">
                                    <div class="form-check checkbox-theme">
                                        <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">
                                            مرا به خاطر بسپار
                                        </label>
                                    </div>
                                    <a href="/login/forgotpass">فراموشی رمزعبور</a>
                                </div>
                                <div class="form-group">
                                    <button href="/login/login" type="submit" class="btn-md btn-theme btn-block">ورود</button>
                                </div>
                            </form>
                            <p>حساب کاربری ندارید؟<a href="/login/register"> از اینجا ثبت نام کنید</a></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /. Login page -->


<!-- External JS libraries -->
<script src="~/login/assets/js/jquery-2.2.0.min.js"></script>
<script src="~/login/assets/js/popper.min.js"></script>
<script src="~/login/assets/js/bootstrap.min.js"></script>
<!-- Custom JS Script -->
<script type="text/javascript">
    $(window).load(function() {
        // Animate loader off screen
        $(".loader").fadeOut("slow");;
    });
</script>

</body>
</html>